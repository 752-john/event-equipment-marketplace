generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  COMPANY
}

enum RentalStatus {
  REQUESTED
  APPROVED
  PAYMENT_PENDING
  PAID
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum EquipmentStatus {
  ACTIVE
  INACTIVE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company   Company?
  rentals   Rental[]

  @@map("users")
}

model Company {
  id          String   @id @default(uuid())
  name        String
  document    String   @unique // CNPJ/CPF
  description String?
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  equipments  Equipment[]

  @@map("companies")
}

model Equipment {
  id          String          @id @default(uuid())
  name        String
  description String
  price       Decimal         @db.Decimal(10, 2) // Price per day
  imageUrl    String?
  status      EquipmentStatus @default(ACTIVE)
  companyId   String
  company     Company         @relation(fields: [companyId], references: [id])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  rentals     Rental[]

  @@map("equipments")
}

model Rental {
  id          String       @id @default(uuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  equipmentId String
  equipment   Equipment    @relation(fields: [equipmentId], references: [id])
  startDate   DateTime
  endDate     DateTime
  totalPrice  Decimal      @db.Decimal(10, 2)
  status      RentalStatus @default(REQUESTED)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  payment     Payment?

  @@map("rentals")
}

model Payment {
  id        String        @id @default(uuid())
  rentalId  String        @unique
  rental    Rental        @relation(fields: [rentalId], references: [id])
  amount    Decimal       @db.Decimal(10, 2)
  status    PaymentStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("payments")
}
